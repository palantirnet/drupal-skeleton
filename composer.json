{
    "name": "palantirnet/drupal-skeleton",
    "description": "A Drupal 7 project template.",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Palantir.net",
            "email": "info@palantir.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "preferred-install": "dist",
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:palantirnet/the-build.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:palantirnet/the-vagrant.git"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        }
    ],
    "require": {
        "composer/installers": "^1.0",
        "derhasi/composer-preserve-paths": "0.1.*",
        "drupal/drupal": "7.*",
        "palantirnet/the-build": "dev-master"
    },
    "require-dev": {
        "behat/behat": "^3.1",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "composer/composer": "@dev",
        "dflydev/embedded-composer-console": "@dev",
        "dflydev/embedded-composer-core": "@dev",
        "drupal/console": "^0.11.3",
        "drupal/drupal-extension": "^3.1",
        "drush/drush": "^8.0",
        "palantirnet/the-vagrant": "dev-master",
        "sculpin/sculpin": "~2.0",
        "sculpin/sculpin-theme-composer-plugin": "dev-master as 1.0.0"
    },
    "suggest": {
        "cweagans/composer-patches": "Try ^1.0. Apply patches to packages, especially Drupal.org contrib."
    },
    "conflict": {
      "drupal/core": "8.*"
    },
    "extra": {
        "installer-paths": {
            "web/": ["type:drupal-core"],
            "web/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "web/profiles/contrib/{$name}/": ["type:drupal-profile"],
            "web/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "preserve-paths": [
          "web/sites/all/modules/contrib",
          "web/sites/all/themes/contrib",
          "web/sites/all/libraries",
          "drush/contrib",
          "web/sites/default/settings.php",
          "web/sites/default/files"
        ]
    }    
}
