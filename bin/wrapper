#!/usr/bin/env php
<?php

if(!file_exists('conf/drupal/config.yml')) {
  copy('conf/drupal/drupal.dist.yml', 'conf/drupal/drupal.yml');
  echo "File config.yml copied to conf directory\n\n";
}
$path = __DIR__ . "/../";
exec($path . "bin/settings_compile conf/drupal/drupal.yml conf/drupal/settings.php");
